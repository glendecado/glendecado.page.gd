# public/min/.htaccess

# Disable directory listing
Options -Indexes

<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Redirect everything to index.min.php
  RewriteCond %{REQUEST_URI} !^/index\.min\.php$
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteRule ^.*$ index.min.php [L,QSA]
</IfModule>

# Remove ?i=1 from URLs
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteCond %{QUERY_STRING} ^i=1$
  RewriteRule ^(.*)$ /$1? [R=301,L]
</IfModule>
